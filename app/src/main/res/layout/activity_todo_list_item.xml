<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/activity_todo_list_item">

    <ImageView
        android:id="@+id/activity_todo_list_item_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="@dimen/default_margin"
        android:src="@drawable/ic_lightbulb_outline_black_24px"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/activity_todo_list_item_picture"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="@dimen/default_margin"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/activity_todo_list_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="@dimen/default_margin"/>

    <ImageButton
        android:id="@+id/activity_todo_list_item_share"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:background="@drawable/ic_share_white_24dp"
        android:backgroundTint="@color/colorPrimary"
        android:layout_margin="@dimen/default_margin"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/activity_todo_list_item_remove"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_delete_forever_black_24px"
        android:layout_margin="@dimen/default_margin"/>

</LinearLayout>